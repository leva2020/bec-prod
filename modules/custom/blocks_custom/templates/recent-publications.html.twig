<div class="panel-body">
    <div class="listing blog">
        <p class="heading">Publicaciones Recientes</p>

        {% if recents %}
            {% for recent in recents %}
                {% if recent.id !== node.id %}
                    <div class="item even" itemscope="" itemtype="http://schema.org/BlogPosting">
                        <div class="info">
                            <a href="{{ path('entity.node.canonical', {'node': recent.id}) }}" itemprop="url">
                                <p class="heading" itemprop="name headline">
                                    {{ recent.title.value }}
                                </p>
                            </a>

                        </div>
                        <div class="meta">
                            <div>
                                <time itemprop="datePublished">
                                    <span class="date">{{ recent.published_at.value|date('j M Y') }}</span>
                                </time>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
    <a class="see_all" href="/publicaciones/">Ver todos</a>
</div>