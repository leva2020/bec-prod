<div class="page_component accordion">
    <div class="panel-group" id="accordion" role="tablist">
        {% if archivos %}
            {% for anio, meses in archivos %}
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading-{{ anio }}">
                        <p class="heading panel-title">
                            <a data-toggle="collapse"
                               href="#history-{{ anio }}"
                               aria-controls="history-{{ anio }}">
                                {{ anio }}
                                <i class="fa fa-chevron-down pull-right after highlight"></i>
                            </a>
                        </p>
                    </div>
                    <div id="history-{{ anio }}" class="panel panel-default collapse">
                        {% for mes, files in meses %}
                            <div class="panel-heading" role="tab"
                                 id="heading-{{ anio }}-{{ mes }}">
                                <p class="heading panel-title">
                                    <a data-toggle="collapse"
                                       data-parent="#heading-{{ anio }}"
                                       href="#history-{{ anio }}-{{ mes }}"
                                       aria-controls="history-{{ anio }}-{{ mes }}">
                                        {{ mes|capitalize }}
                                        <i class="fa fa-chevron-down pull-right after highlight"></i>
                                    </a>
                                </p>
                            </div>
                            <div id="history-{{ anio }}-{{ mes }}" class="collapse">
                                <div class="panel-body">
                                    {% for arc in files %}
                                        <p>
                                            {{ arc.day }} de {{ mes }}:
                                            <a data-id="10546"
                                            href="{{ arc.archivo }}"
                                            target="_blank">
                                            {{ arc.titulo }}
                                            </a>
                                            -
                                            <a data-id="10546"
                                               href="{{ arc.archivo_2 }}"
                                               target="_blank">
                                                {{ arc.titulo_2 }}
                                            </a>
                                        </p>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
