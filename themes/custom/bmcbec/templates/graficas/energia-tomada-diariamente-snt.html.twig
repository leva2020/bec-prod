{% set now = "now"|date("Y-m-d", "America/Bogota") %}
{% set yearAgo = "now"|date_modify("-1 year")|date("Y-m-d", "America/Bogota") %}

{% set monthNow = "now"|date("m", "America/Bogota") %}
{% set monthAgo = "now"|date_modify("-1 year")|date("m", "America/Bogota") %}

{% set info=enviar_post_ws('getCantidadTomadaDiariamenteSnt','fechaInicial=' ~yearAgo~ '&fechaFinal='~now~'&codigoTipoDemanda=0',1,1,'','','cantidad_mbtud')  %}

