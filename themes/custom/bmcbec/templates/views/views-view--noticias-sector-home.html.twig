<section class="content advanced-component news">
    <div data-os-animation="fadeIn" data-os-animation-delay="0">
        <div>
            <div class="container">
                <div class="row">
                    <div class="header-section col-md-12 col-xs-12">
                        <h1 class="color-text-blue">Noticias del Sector</h1>
                        <hr class="x1-5"/>
                        <p>
                            <a href="/publicaciones?categoria=Noticias%20del%20Sector" title="Noticias Sector">
                                Ver otras
                                Noticias del Sector
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="container">
                <div class="row">
                    {% set resultados = view.result %}
                    {% for key , row in resultados %}
                        {% set data = row._entity %}
                        {% if loop.index0 is divisible by(2) or  loop.index == 0 %}
                            <div class="col-md-4">
                        {% endif %}
                        <article>
                            <div name="{{ loop.index0 }} - {{ loop.index0 is divisible by(2) }}"
                                 class="wrapper-image">
                                <a href="{{ path('entity.node.canonical', {'node': data.id}) }}">
                                    <img src="{{ file_url(data.field_imagen_desktop[0].entity.fileuri) }}"
                                         itemprop="image">
                                </a>
                            </div>
                            <div class="content">
                                <a href="{{ path('entity.node.canonical', {'node': data.id}) }}" itemprop="url">
                                    {{ data.field_titulo[0].value }}
                                </a>
                                <p>{{ data.field_descripcion[0].value }}</p>
                                {% set newsDate = data.created.value|date('j M Y') %}
                                <p>Fecha: {% trans %} {{ newsDate }}{% endtrans %}</p>
                            </div>
                        </article>
                        {% if loop.index is divisible by(2) and loop.index > 0 %}
                            </div>
                        {% endif %}
                    {% endfor %}

                    <div class="col-md-4 aside">
                        {{ drupal_block('interest_block') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
