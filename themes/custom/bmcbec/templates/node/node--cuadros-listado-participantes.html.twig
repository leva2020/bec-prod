<section class="content advanced-component tabbed-listing secondary_colour_3-bg">
    <div class="container">
        <div class="row overview os-animation animated fadeIn" data-os-animation="fadeIn" data-os-animation-delay="0s"
             style="animation-delay: 0s;">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 text-center">
                <p class="heading main primary_colour_1-text">{{ node.title.value }}</p>
                <div class="text ">
                    {{ node.body.value | raw }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="tabbed col-xs-12" role="tabpanel">
                <ul class="nav nav-tabs responsive text-center hidden-xs hidden-sm" role="tablist">
                    <li role="presentation" class="active odd">
                        <a href="#tab-name-1905-1" aria-controls="tab-name-1905-1" role="tab" data-toggle="tab">
                            <i class="fa fa-chevron-down pull-right after highlight"></i>
                        </a>
                    </li>
                </ul>
                <div class="tab-content responsive hidden-xs hidden-sm">
                    <div id="tab-name-1905-1" role="tabpanel" class="tab-pane active">
                        <div class="row listing section grid">
                            {% if node.field_participantes %}
                                {% for participantes in node.field_participantes %}
                                    <div class="item col-md-4 col-sm-6 col-xs-12  odd">
                                        <a href="{{ path('entity.node.canonical', {'node': participantes.entity.id}) }}">
                                            <div class="image">
                                                {% set imagestyle = {
                                                    '#theme':      'image_style',
                                                    '#style_name': 'custom_350x263',
                                                    '#uri':        participantes.entity.field_image.entity.uri.value,
                                                    '#alt':        '',
                                                } %}
                                                {{ imagestyle }}
                                            </div>
                                            <p class="heading primary_colour_1-text">{{ participantes.entity.title.value }}</p>
                                        </a>
                                        <div class="text ">
                                            <p>
                                                {{ participantes.entity.field_descripcion.value }}
                                            </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<section class="content advanced-component standard-components">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-xs-12" role="main">
                <div class="page_component codeblock">
                    <h1>{{ node.field_titulo_formulario.value }}</h1>
                    <iframe id="blockrandom" class="wrapper" src="{{ node.field_modulo_1.value }}" width="100%"
                            height="1500px" frameborder="0" scrolling="yes"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>