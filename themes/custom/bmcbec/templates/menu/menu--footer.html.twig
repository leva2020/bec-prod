{% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
        <ul>
            {% for key, item in items %}
                {% if (loop.index is even) %}
                    <li class="col-lg-4 col-xs-6 even">
                        <a href="{{ item.uri }}"><i class="fa fa-angle-right"></i>{{ item.title }}</a>
                    </li>
                {% else %}
                    <li class="col-lg-4 col-xs-6 odd">
                        <a href="{{ item.uri }}"><i class="fa fa-angle-right"></i>{{ item.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
