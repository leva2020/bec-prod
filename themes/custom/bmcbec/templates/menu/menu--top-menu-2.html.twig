{% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
            {% for key, item in items %}
              {% if loop.first %}
                {% if menu_level == 1 %}
                  {% if (loop.index is even) %}
                    <li class="even"><a href="{{ item.url }}">
                      <i class="fa fa-user-md"></i>{{ item.title }}</a>
                    </li>
                  {% else %}
                    <li class="odd">
                      <a href="{{ item.url }}"><i class="fa fa-sign-in"></i>{{ item.title }}</a>
                    </li>
                  {% endif %}
                {% else %}
                  <ul class="pull-right" style="margin:0 40px 0 20px;">
                    <li class="odd">
                      <a href="/publicaciones/?utm_source=bec&amp;utm_medium=cpc&amp;utm_media=homepagebutton" onclick="ga('send','event','Button','Click','Publicaciones','');" class="owi_button">Publicaciones</a>
                    </li>
                  </ul>
                  <ul class="pull-right"></ul>
                {% endif %}
              {% elseif loop.last %}
                {% if (loop.index is even) %}
                  {% if  menu_level == 1 %}
                    <li class="even"><a href="{{ item.url }}">
                      <i class="fa fa-user-md"></i>{{ item.title }}</a>
                    </li>
                  {% else %}
                    <li class="dropdown even">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user highlight"></i>Acceso Prime<i class="fa fa-angle-down after"></i></a>
                      <ul class="dropdown-menu pull-right" role="menu">
                        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                      </ul>
                    </li>
                  {% endif %}
                {% else %}
                  {% if  menu_level == 1 %}
                    <li class="odd">
                      <a href="{{ item.url }}"><i class="fa fa-sign-in"></i>{{ item.title }}</a>
                    </li>
                  {% else %}
                    <li class="dropdown odd">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user highlight"></i>Acceso Prime<i class="fa fa-angle-down after"></i></a>
                      <ul class="dropdown-menu pull-right" role="menu">
                        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                      </ul>
                    </li>
                  {% endif %}
                {% endif %}
                </ul>
              {% else %}
                {% if (loop.index is even) %}
                  {% if  menu_level == 1 %}
                    <li class="even">
                      <a href="{{ item.url }}"><i class="fa fa-sign-in"></i>{{ item.title }}</a>
                    </li>
                  {% else %}
                    <li style="display:none;" class="even">
                        <a class="secondary_colour_1-text" href="{{ item.url }}">{{ item.title }}</a>
                    </li>
                  {% endif %}
                {% else %}
                  {% if  menu_level == 1 %}
                    <li class="odd">
                      <a href="{{ item.url }}"><i class="fa fa-sign-in"></i>{{ item.title }}</a>
                    </li>
                  {% else %}
                    <li style="display:none;" class="odd">
                        <a class="secondary_colour_1-text" href="{{ item.url }}">{{ item.title }}</a>
                    </li>
                  {% endif %}
                {% endif %}
              {% endif %}
            {% endfor %}
    {% endif %}
{% endmacro %}
